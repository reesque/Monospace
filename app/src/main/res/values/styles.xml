<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MonospaceTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Set the background to the system wallpaper -->
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textSelectHandle">@color/black</item>
        <item name="android:textSelectHandleLeft">@color/black</item>
        <item name="android:textSelectHandleRight">@color/black</item>
    </style>

    <style name="MonoSwitch">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MonoCalendar" parent="MonospaceTheme">
        <item name="colorAccent">@color/black</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:headerYearTextAppearance">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:focusedMonthDateColor">@color/black</item>
    </style>

    <style name="MonoDialogSlide" parent="@android:style/Theme.Dialog">
        <item name="android:textSelectHandle">@color/black</item>
        <item name="android:textSelectHandleLeft">@color/black</item>
        <item name="android:textSelectHandleRight">@color/black</item>
    </style>

    <style name="MonoDialogSlideBottom" parent="MonoDialogSlide">
        <item name="android:windowAnimationStyle">@style/MonoDialogSlideBottomAnimation</item>
    </style>

    <style name="MonoDialogSlideBottomAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_bottom_in_fast_anim</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom_out_fast_anim</item>
    </style>

    <style name="MonoDialogSlideStart" parent="MonoDialogSlide">
        <item name="android:windowAnimationStyle">@style/MonoDialogSlideStartAnimation</item>
    </style>

    <style name="MonoDialogSlideStartAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_start_in_fast_anim</item>
        <item name="android:windowExitAnimation">@anim/slide_start_out_fast_anim</item>
    </style>

    <style name="MonoDialogSlideEnd" parent="MonoDialogSlide">
        <item name="android:windowAnimationStyle">@style/MonoDialogSlideEndAnimation</item>
    </style>

    <style name="MonoDialogSlideEndAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_end_in_fast_anim</item>
        <item name="android:windowExitAnimation">@anim/slide_end_out_fast_anim</item>
    </style>

    <style name="MonoDialogFade" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/MonoDialogFadeAnimation</item>
        <item name="android:textSelectHandle">@color/black</item>
        <item name="android:textSelectHandleLeft">@color/black</item>
        <item name="android:textSelectHandleRight">@color/black</item>
    </style>

    <style name="MonoDialogFadeAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in_fast_anim</item>
        <item name="android:windowExitAnimation">@anim/fade_out_fast_anim</item>
    </style>
</resources>
