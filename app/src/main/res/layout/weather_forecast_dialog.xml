                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/weather_day4_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="None"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="6dp">

            <TextView
                android:id="@+id/weather_day5_dow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="None"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:gravity="center"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/weather_day5_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:background="@drawable/icon_stroke_black"
                android:src="@drawable/no_service"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/weather_day5_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="None"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/weather_day6_dow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="None"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:gravity="center"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/weather_day6_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:background="@drawable/icon_stroke_black"
                android:src="@drawable/no_service"
