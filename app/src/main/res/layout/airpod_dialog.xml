<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="@drawable/dialog_bg_white"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/pod_model"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <LinearLayout
            android:id="@+id/left_pod_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.35"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/left_pod_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitCenter"
                android:src="@drawable/left_pod" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/left_pod_battery_charge"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/bolt" />

                <ImageView
                    android:id="@+id/left_pod_battery"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/battery4" />
            </LinearLayout>

            <TextView
                android:id="@+id/left_pod_percentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/center_pod_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/center_pod_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitCenter"
                android:src="@drawable/pod_case" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/center_pod_battery_charge"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/bolt" />

                <ImageView
                    android:id="@+id/center_pod_battery"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/battery4" />
            </LinearLayout>

            <TextView
                android:id="@+id/center_pod_percentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/right_pod_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.35"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/right_pod_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitCenter"
                android:src="@drawable/right_pod" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/right_pod_battery_charge"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/bolt" />

                <ImageView
                    android:id="@+id/right_pod_battery"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/battery4" />
            </LinearLayout>

            <TextView
                android:id="@+id/right_pod_percentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>