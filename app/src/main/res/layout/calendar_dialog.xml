<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="395dp"
    android:background="@drawable/dialog_bg_white"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingBottom="15dp">

    <CalendarView
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"
        android:layout_height="345dp"
        android:theme="@style/MonoCalendar"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Prevent clicking different date -->
    <View
        android:layout_width="match_parent"
        android:layout_height="290dp"
        app:layout_constraintBottom_toTopOf="@id/alarm_container"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"/>

    <LinearLayout
        android:id="@+id/alarm_container"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="center">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/alarm_clock"
            android:layout_marginEnd="6dp"/>

        <TextView
            android:id="@+id/alarm_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/capsule_bg_black"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textSize="15sp"
            android:text="@string/widget_none_desc"
            android:textColor="@color/white"
            android:gravity="center"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>